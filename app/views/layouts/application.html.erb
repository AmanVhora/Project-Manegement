<!DOCTYPE html>
<html>
  <head>
    <title>ProjectManagement</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  </head>

  <body>
    <% if current_user.present? %>
      <%= react_component("Navbar", { home: root_path, profile: profile_path, logout: destroy_user_session_path }, {prerender: true}) %>
    <% end %>

    <div class="container mt-3">
      <% flash.each do |type, msg| %>
        <div class="container d-flex justify-content-center align-items-center w-50 alert <%= flash.alert ? "alert-danger" : "alert-success"%>  my-2">
          <%= msg %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
